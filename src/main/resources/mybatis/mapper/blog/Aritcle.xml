<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.blogadmin.blog.model.Article">
    <resultMap id="get-Article-result" type="com.blogadmin.blog.model.Article">
        <id property="id" column="id" />
        <!-- 编码-->
        <result property="type" column="type" />
        <!-- 文章内容-->
        <result property="content" column="content" />
        <!-- 备注-->
        <result property="memo" column="memo" />
        <!-- 创建时间-->
        <result property="gmtCreated" column="gmt_created" />
        <!-- 更新时间-->
        <result property="gmtModified" column="gmt_modified" />
        <!-- 是否删除-->
        <result property="isDeleted" column="is_deleted" />
    </resultMap>

    <sql id="Article_Base_Column_List">
        id,
        name,
        content,
        gmt_created,
        gmt_modified,
        is_deleted,
        memo,
        type
    </sql>

    <select id="Article_count"  resultType="map">
        select
        (select count(0) from blog_article where is_deleted = 0) as count
    </select>

    <select id="Article_get_limit"  resultMap="get-Article-result">
        select
        <include refid="Article_Base_Column_List" />
        from
        blog_article
        where
        is_deleted = 0
        limit
        #{limitBegin}
        ,
        #{limitEnd}
    </select>

    <select id="Article_get"  resultMap="get-Article-result">
        select
        <include refid="Article_Base_Column_List" />
        from
        blog_article
        where
        id = #{id}
    </select>

    <select id="Article_list"  resultMap="get-Article-result">
        select
        <include refid="Article_Base_Column_List" />
        from
        blog_article
        where
        is_deleted = 0
    </select>

    <insert id="Article_insert" parameterType="com.blogadmin.blog.model.Article">
        insert into blog_article(
        name,
        content,
        gmt_created,
        gmt_modified,
        is_deleted,
        memo,
        type)
        values(
        #{name}, #{content}, now(),now(),0,#{memo},#{type}
        )
        <selectKey keyProperty="id" resultType="long" order="AFTER">
            SELECT @@IDENTITY
        </selectKey>
    </insert>

    <insert id="Article_insert_batch" parameterType="java.util.List" >
        insert into
        blog_article
        (
        name,
        content,
        gmt_created,
        gmt_modified,
        is_deleted
        memo;
        type;
        )values
        <foreach collection ="list" item ="item" index ="index" separator =",">
            (
            #{item.name},
            #{item.content},
            now(),
            now(),
            0,
            #{item.memo}
            #{item.type}
            )
        </foreach>
    </insert>

    <update id="Article_logicDelete" parameterType="com.blogadmin.blog.model.Article">
        update
        blog_article
        set
        is_deleted=1,
        gmt_modified = now()
        where
        id = #{id}
    </update>
    <update id="Article_update" parameterType="com.blogadmin.blog.model.Article" >
        update blog_article
        set
        <if test="name != null" >
            name = #{name},
        </if>
        <if test="content != null" >
            content = #{content},
        </if>
        <!--<if test="gmt_created != null" >-->
            <!--gmt_created = ${gmt_created},-->
        <!--</if>-->
        <if test="memo !=null">
            memo=#{memo},
        </if>
        <if test="type !=null">
            type=#{type},
        </if>
        gmt_modified=now()
        where
        id = #{id}
    </update>
    <delete id="Article_delete" parameterType="com.blogadmin.blog.model.Article">
        delete from blog_article where id=#{id}
    </delete>
</mapper>
